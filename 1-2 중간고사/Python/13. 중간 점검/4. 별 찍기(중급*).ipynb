     "text": [
      "   *\n",
      "  * *\n",
      " *   *\n",
      "*******\n"
     ]
    }
   ],
   "source": [
    "n = int(input())\n",
    "j = 1\n",
    "\n",
    "print(\" \"*(n-1)+\"*\") # 첫줄\n",
    "\n",
    "for i in range(2, n): # 중간\n",
    "\tprint(\" \"*(n-i)+\"*\"+\" \"*(j)+\"*\")\n",
    "\tj += 2\n",
    "\t\n",
    "print(\"*\"*(n+(n-1))) # 마지막줄"
   ]
  }
